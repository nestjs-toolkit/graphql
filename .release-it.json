{
  "git": {
    "requireCleanWorkingDir": false,
    "requireBranch": false,
    "requireUpstream": true,
    "requireCommits": false,
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "commitArgs": [
      "--no-verify"
    ],
    "tag": true,
    "tagName": null,
    "tagAnnotation": "build: ${version}",
    "tagArgs": [],
    "push": true,
    "pushArgs": [
      "--follow-tags"
    ],
    "pushRepo": ""
  },
  "github": {
    "release": true,
    "skipChecks": false
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": [
      "yarn lint",
      "yarn prebuild"
    ],
    "after:bump": "yarn lib:build",
    "after:git:release": "echo \"After git push, before github release\" && git clean -df",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
