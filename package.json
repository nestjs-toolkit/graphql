{
  "name": "@nestjs-toolkit/graphql",
  "version": "0.1.2",
  "description": "core helpers",
  "author": "Valmir Barbosa",
  "license": "MIT",
  "private": false,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "doc": "doctoc docs --title='## Summary'",
    "commit": "git-cz",
    "release": "release-it --patch",
    "lib:build": "yarn prebuild && tsc -p tsconfig.build.json && mv dist/libs/graphql/src/* dist && cp -r libs/graphql/schemas dist && rm dist/libs -r"
  },
  "dependencies": {},
  "devDependencies": {
    "@nestjs-toolkit/base": "^0.1.0",
    "@nestjs-toolkit/winston-logger": "^0.1.25",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.7.0",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/express": "^4.17.3",
    "@types/jest": "25.2.3",
    "@types/lodash": "^4.14.161",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "apollo-server": "^2.18.1",
    "apollo-server-types": "^0.5.1",
    "cz-conventional-changelog": "^3.3.0",
    "deep-object-diff": "^1.1.0",
    "doctoc": "^1.4.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "fast-safe-stringify": "^2.0.7",
    "graphql": "^15.3.0",
    "graphql-redis-subscriptions": "^2.3.1",
    "graphql-subscriptions": "^1.1.0",
    "husky": "^4.3.0",
    "ioredis": "^4.17.3",
    "jest": "26.0.1",
    "moment": "^2.29.0",
    "mongoose": "^5.10.7",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "release-it": "^14.0.2",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@nestjs-toolkit/graphql/(.*)": "<rootDir>/libs/graphql/src/$1",
      "@nestjs-toolkit/graphql": "<rootDir>/libs/graphql/src"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn doc && yarn format && git add docs",
      "pre-push": "yarn lint",
      "commit-msg": "node ./.github/conventional/validate-commit.js"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
